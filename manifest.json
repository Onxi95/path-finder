{
  "manifest_version": 2,
  "name": "Path Finder",
  "description": "To find out an HTML element unique CSS selector",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "Path Finder"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["theroom.min.js", "utils.js", "content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
   "128": "icon128.png"
  },
  "permissions": ["activeTab"]
}
